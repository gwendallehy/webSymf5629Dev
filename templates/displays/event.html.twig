
{% extends 'base.html.twig' %}

{% block title %}Événements{% endblock %}

{% block main %}
    <h1>Événements</h1>

    <div class="events">
        {% for event in events %}
            <div class="card">
                <h2>{{ event.name }}</h2>
                <p><strong>Date :</strong> {{ event.date|date('d/m/Y H:i') }}</p>
                <p><strong>Lieu :</strong> {{ event.place }}</p>
                {% if event.imgLink %}
                    <img src="{{ asset(event.imgLink) }}" alt="{{ event.name }}" style="max-width: 300px;">
                {% endif %}
                <p>{{ event.content|raw }}</p>
            </div>
        {% else %}
            <p>Aucun événement à venir.</p>
        {% endfor %}
    </div>
{% endblock %}
